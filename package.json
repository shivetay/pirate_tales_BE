{
	"name": "pirate_tales_be",
	"version": "1.0.0",
	"description": "backend project for mmo webbased game Pirate Tales",
	"keywords": [
		"mmo",
		"webbased",
		"game"
	],
	"homepage": "https://github.com/shivetay/pirate_tales_BE#readme",
	"bugs": {
		"url": "https://github.com/shivetay/pirate_tales_BE/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shivetay/pirate_tales_BE.git"
	},
	"license": "ISC",
	"author": "≈Åukasz Dawidowicz",
	"type": "commonjs",
	"main": "app.ts",
	"scripts": {
		"start": "nodemon --exec ts-node src/server.ts",
		"dev": "nodemon --exec ts-node src/server.ts",
		"prod": "cross-env NODE_ENV=production nodemon --exec ts-node src/server.ts",
		"build": "tsc",
		"start:prod": "cross-env NODE_ENV=production node dist/server.js",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prepare": "husky",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"commit": "cz",
		"commit:retry": "git commit --amend --no-edit"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"helmet": "^8.1.0",
		"mongoose": "^8.19.1",
		"morgan": "^1.10.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/express": "^5.0.3",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.8.0",
		"commitizen": "^4.3.1",
		"cross-env": "^10.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.4",
		"nodemon": "^3.1.10",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx}": [
			"biome check --write",
			"biome format --write"
		],
		"*.{json,md}": [
			"biome format --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
